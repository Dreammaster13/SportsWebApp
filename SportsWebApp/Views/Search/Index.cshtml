<h1>@ViewBag.title</h1>

<form action="/Search/Results">
    <h2>Search by:</h2>

    <p>
        @foreach (KeyValuePair<string, string> column in ViewBag.columns)
        {
            <span>
                <input type="radio"
                       name="searchType"
                       id="@column.Key"
                       value="@column.Key"
                       checked="@column.Key == 'all''" />
                <label for="@column.Key">@column.Value</label>
            </span>
        }
    </p>

    <p>
        <label for="searchTerm">Keyword:</label>
        <input type="text" name="searchTerm" id="searchTerm" />
    </p>

    <input type="submit" value="Search" />
</form>

<hr />

@if (ViewBag.sports != null)
{

    <h3>@ViewBag.sports.Count Result(s)</h3>

    // Loop over jobs dictionary and display all job fields
    @foreach (Dictionary<string, string> sport in ViewBag.sports)
    {
        <table class="table-bordered">
            <tbody>
                @foreach (KeyValuePair<string, string> entry in sport)
                {
                    <tr>
                        <td><strong>@entry.Key</strong></td>
                        <td>@entry.Value</td>
                    </tr>
                }
            </tbody>
        </table>
        <p></p>
        <p></p>
    }
}